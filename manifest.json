{
    "manifest_version": 2,
  
    "name": "Spike",
    "description": "Save Highlighted Text",
    "version": "1.0",
    "author": "Gowtham Gaddam",
    "background": {
        "scripts": [
            "background.js",
            "string_utils.js"
        ],
        "persistent": false
    },
    "icons": {
      
    }, 
    "commands": {
      "apply_highlight.0": {
          "description": "Highlight #1"
      }
    },
    "browser_action": {
          "default_title": "Spike",
          "default_icon": {
           
          },  
      "default_popup": "dashboard.html"
    },
      "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["spike.client.js", "string_utils.js", "xpath.js"],
        "run_at": "document_start"
      }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
      "clipboardWrite",
      "tts",
      "storage",
      "contextMenus",
      "unlimitedStorage",
      "webNavigation",
      "tabs",
      "<all_urls>"
  ]
}